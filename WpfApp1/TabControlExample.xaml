<Window x:Class="WpfApp1.TabControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TabControlExample" Height="429.255" Width="388.298">
    <TabControl>
        <TabItem Header="Books">
            <StackPanel>
                <Expander BorderBrush="Blue" BorderThickness="3">
                    <TextBlock Text="This is the tab for books"></TextBlock>
                </Expander>
            </StackPanel>
        </TabItem>
        <TabItem Header="Cars">
            <StackPanel>
            <Expander BorderBrush="Green" BorderThickness="3">
                    <TextBlock Text="This is the tab for Cars"></TextBlock>
            </Expander>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
