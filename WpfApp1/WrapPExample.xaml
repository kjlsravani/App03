<Window x:Class="WpfApp1.WrapPExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WrapPExample" Height="250" Width="300">
    <WrapPanel>
        <Button VerticalAlignment="Top">One</Button>
        <Button Height="40" Margin="0,0,0,0">Two</Button>
        <Button VerticalAlignment="Center">Three</Button>
        <Button VerticalAlignment="Bottom">Four</Button>
    </WrapPanel>
</Window>
