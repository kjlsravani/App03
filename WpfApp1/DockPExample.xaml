<Window x:Class="WpfApp1.DocPExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DockPExample" Height="250" Width="300">
    <DockPanel LastChildFill="False">
        <Button DockPanel.Dock="Top">One</Button>
        <Button DockPanel.Dock="Left">Two</Button>
        <Button Content="Three" DockPanel.Dock="Right"></Button>
        <Button DockPanel.Dock="Bottom">Four</Button>
    </DockPanel>
</Window>
